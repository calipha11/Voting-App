<div class="container">
    <h3><%= quiz.name %></h3>
    <form action="/quiz/update/<%= quiz._id %>" method="POST">
        <label>I'd like to vote for...</label>
        <select name="choice">
            <option>Choose an option...</option>
            <% Object.keys(quiz.ansChoices).forEach(function(key){ %>
                <option><%= JSON.stringify(quiz.ansChoices[key].value) %></option>
            <% }); %>
        </select>
        <input class="btn btn-primary btn-block" id="submit" type="submit" value="Submit">
    </form>
    
    <div style="width: 400px">
    <canvas id="myChart" width="100" height="100"></canvas>

    </div>
    
     <% if(currentUser){ %>
        <form class="delete-form" id="delete" action="/quiz/<%= quiz._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
        <button><a class="twitter-share-button" id="twitter"
            href="https://twitter.com/intent/tweet?text=Check%20out%20this%20voting%20website."
            data-size="large">
        Tweet</a>
        </button>
    <% } %>
    
</div>

<script type='text/javascript'>var quiz =<%-JSON.stringify(quiz)%></script>

<script type="text/javascript" src="/js/main.js"></script>

<% include partials/footer %>